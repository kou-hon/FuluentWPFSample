<Window x:Class="FuluentWPFSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FuluentWPFSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="450" ThemeMode="None">
    <StackPanel Orientation="Vertical" >
        <Label Content="テーマ"/>
        <ComboBox HorizontalAlignment="Left" Width="120" SelectedIndex="0" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem Content="None"/>
            <ComboBoxItem Content="Light"/>
            <ComboBoxItem Content="Dark"/>
            <ComboBoxItem Content="System"/>
        </ComboBox>

        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="あいうえお" />
        <CheckBox Content="かきくけこ" />
        <RadioButton Content="さし" />
        <RadioButton Content="すせ" />
        <RadioButton Content="そた" />
        <Button Content="ノーマル"/>
        <Button Content="丸角">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="色固定" Background="Red"/>
        <TabControl >
            <TabItem Header="カレンダー">
                <Grid Height="250">
                    <Viewbox>
                        <Calendar/>
                    </Viewbox>
                </Grid>
            </TabItem>
            <TabItem Header="日付選択">
                <DatePicker/>
            </TabItem>
        </TabControl>
    </StackPanel>
</Window>
